<Window x:Class="Admin.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admin"
        mc:Ignorable="d"
        Title="AddCategory" Height="155" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Category Name" HorizontalAlignment="Center"/>
        <TextBox Name="categoryName" Width="125" Height="20" Margin="0,0,0,45"/>
        <Button Content="OK" Height="20" Width="75" Margin="0,10,0,0" Click="Button_Click"/> 
    </Grid>
</Window>
